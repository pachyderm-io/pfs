{
  "pipeline": {
    "name": "checkpoint"
  },
  "transform": {
    "image": "dwhitena/pix2pix",
    "cmd": [ "/bin/bash" ],
    "stdin": [
	"python pix2pix.py --mode train --output_dir /pfs/out --max_epochs 100 --input_dir /pfs/training --which_direction BtoA", 
	"sed -i 's/out/checkpoint/g' /pfs/out/checkpoint"
    ]
  },
  "inputs": [
    {
      "repo": {
        "name": "training"
      },
      "glob": "/"
    }
  ]
}
{
  "pipeline": {
    "name": "model"
  },
  "transform": {
    "image": "dwhitena/pix2pix",
    "cmd": [ "/bin/bash" ],
    "stdin": [ 
	"python pix2pix.py --mode export --output_dir /pfs/out --checkpoint /pfs/checkpoint",
	"sed -i 's/out/model/g' /pfs/out/checkpoint" 
    ]
  },
  "inputs": [
    {
      "repo": {
        "name": "checkpoint"
      },
      "glob": "/"
    }
  ]
}
